@import './toRem.styl'
.my_index {
  .header {
    width 100%;
    height toRem(300);
    background: url('~@/assets/images/my-bg.png') center no-repeat;
    background-size: cover;
    position relative;

    .set_box {
      display: flex;
      // justify-content space-between;
      justify-content: flex-end;
      padding: toRem(15) toRem(30);

      img {
        width: toRem(42)
        height: toRem(42)
      }
    }

    .user_msg {
      position: absolute;
      top: toRem(90)
      left toRem(30);
      right toRem(30)
      height toRem(274)
      background: #fff;
      border-radius: toRem(10);
      box-shadow: 0px 2px 4px 0px rgba(228, 228, 228, 0.75);
      box-sizing: border-box;
      padding: toRem(20);

      .user {
        display: flex;
        align-items: center;

        img {
          width toRem(80)
          height toRem(80)          
          margin-right: toRem(20);
        }

        h2 {
          font-size: toRem(30);
          color: #222;
        }

        p {
          color: #3A3A3A;
          font-size: toRem(24);
        }

        .notLogin {
          margin-left: toRem(20);
          color: #222222;
          font-size: toRem(44);
        }

        .make_money {
          display: flex;
          align-items: center;
          justify-content: center;
          width: toRem(170);
          height: toRem(50);
          background: linear-gradient(-90deg, rgba(252, 118, 38, 1), rgba(255, 182, 87, 1));
          border-radius: toRem(25);
          margin-left: auto;

          p {
            color: #FFFFFF;
            font-size: toRem(28);
          }
        }

        .sign_now {
          display: flex;
          align-items: center;
          justify-content: center;
          width: toRem(190);
          height: toRem(50);
          background: linear-gradient(-90deg, rgba(252, 118, 38, 1), rgba(255, 182, 87, 1));
          border-radius: toRem(25);
          margin-left: auto;

          img {
            margin-right: toRem(10)
            width: toRem(24);
            height: toRem(30);
          }

          p {
            color: #FFFFFF;
            font-size: toRem(28);
          }
        }
      }

      .user_money {
        display: flex;
        margin-top: toRem(30)

        & > div {
          flex: 1;
          text-align: center;

          p {
            font-size: toRem(50);
            color: #222;
          }

          span {
            color: #9C9C9C;
            font-size: toRem(28);
          }
        }

        .zero {
          color: #9C9C9C;
          font-size: toRem(50);
        }
      }
    }
  }

  .nav {
    display: flex;
    align-items: center;
    margin: toRem(100) toRem(30) toRem(20) toRem(30);
    height:toRem(160);
    box-sizing: border-box;
    // padding-top:toRem(33);
    border-radius: toRem(10);
    box-shadow: 0px 2px 4px 0px rgba(223, 223, 223, 0.75), 0px -2px 4px 0px rgba(223, 223, 223, 0.75);

    // .nav_tab {
    //   padding-bottom:toRem(29);
    //   display: flex;
    //   justify-content flex-start;
    //   box-sizing: border-box;
    //   align-items: center;
      &> div {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;

        img {
          width toRem(60)
          height toRem(60)
          margin-bottom toRem(15)
        }

        p {
          font-size: toRem(26);
          color: #3A3A3A;
        }
      }
    // }
  }

  .banner {
    padding: 0 toRem(30);

    img {
      width 100%;
      border-radius: toRem(10);
    }
  }

